{
  "swagger": "2.0",
  "info": {
    "version": "3.0.0",
    "title": "Node Pokemon searcher"
  },
  "host": "localhost:3000",
  "servers": [
    {
      "url": "/api"
    }
  ],
  "tags": [
    {
      "name": "Pokemons",
      "description": "API for pokemon description"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/pokemon/{name}": {
      "get": {
        "description": "Returns pokemon name and description",
        "summary": "Find pokemon by name",
        "responses": {
          "200": {
            "description": "Pokemon found",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Param missing or invalid",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Pokemon not found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "parameters": [
        {
          "name": "name",
          "in": "path",
          "description": "name of pokemon",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    }
  },
  "definitions": {
    "Error": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      },
      "$ref": "#/definitions/Error"
    }
  }
}
